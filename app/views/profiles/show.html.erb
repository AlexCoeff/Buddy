<div class="container-profile">
  <!-- <h1 style="text-align: center;">MY PROFILE</h1> -->
  <% if policy(@user).user_owns_profile? %>
    <a class="button-edit" href="/profiles/edit"><i class="fas fa-edit fa-lg"></i></a>
  <% end %>

  <% if @user.first_name.nil? || @user.first_name == ""%>
    <h4 class="head"><i class="fas fa-user-circle"></i> Add your name</h4>
    <% else %>
    <h2 class="head"><i class="fas fa-user-circle"></i> <strong><%= @user.first_name %> <%= @user.last_name %></strong></h2>
  <% end %>

  <% if @user.background.nil? || @user.background == ""%>
    <h4><i class="fas fa-user-md"></i> Add your background</h4>
    <% else %>
    <h2><i class="fas fa-user-md"></i> <%= @user.background %></h2>
  <% end %>

  <% if @user.start_date.nil? || @user.start_date == ""%>
    <h4><i class="fas fa-hourglass-start"></i> Select start date & end date</h4>
    <% else %>
    <h2><i class="fas fa-hourglass-start"></i> <%= @user.start_date %>&nbsp&nbsp  <i class="fas fa-hourglass-end"></i> <%= @user.end_date %></h2>
  <% end %>

  <% if @user.diploma.nil? || @user.diploma == ""%>
    <h4><i class="fas fa-user-graduate"></i> Add your diploma</h4>
    <% else %>
    <h2><i class="fas fa-user-graduate"></i> <%= @user.diploma %></h2>
  <% end %>

  <% if @user.field_of_studies.nil? || @user.field_of_studies == ""%>
  <h4><i class="fas fa-book-reader"></i> Select your field of studies</h4>
    <% else %>
    <h2><i class="fas fa-book-reader"></i> <%= @user.field_of_studies %></h2>
  <% end %>

  <% if @user.description.nil? || @user.description == ""%>
    <h4><i class="far fa-address-card"></i> Add your description</h4>
    <% else %>
    <h2><i class="far fa-address-card"></i> <%= @user.description %></h2>
  <% end %>

  <% if @user.values.nil? || @user.values == ""%>
    <h4><i class="fab fa-gratipay"></i> Add your values </h4>
    <% else %>
    <h2><i class="fab fa-gratipay"></i> <%= @user.values %> </h2>
  <% end %>

  <h2><i class="far fa-envelope"></i> <%= @user.email %></h2>
  <% if @user.phone_number.nil? || @user.phone_number == ""%>
    <h4><i class="fas fa-phone-square-alt"></i> Add your phone number</h4>
    <% else %>
    <h2><i class="fas fa-phone-square-alt"></i> <%= @user.phone_number %></h2>
  <% end %>

  <% if @user.city_address.nil? || @user.city_address == ""%>
    <h4><i class="fas fa-map-marker-alt"></i> Add your address</h4>
    <% else %>
    <h2><i class="fas fa-map-marker-alt"></i> <%= @user.city_address %> <%= @user.country_select %></h2>
  <% end %>
</div>

<% if policy(@user).user_owns_profile? %>
  <div class="container-priority">
    <a class="button-edit" href="/profiles/edit"><i class="fas fa-edit fa-lg"></i></a>
    <h2 class="head"><strong>Job Search Priorities</strong></h2>
    <% @user.priorities.order(position: :asc).each do |priority| %>
      <div class="priority_<%= priority.position %>">
        <h1>Priority nÂ°<%= priority.position %></h1>
        <h2><%= priority.job_search %></h2>
        <h2><%= priority.industry %></h2>
        <h2><%= priority.location %></h2>
      </div>
    <% end %>
  </div>
<% end %>


    <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure to log out?" }, class: "btn-profile" %>
